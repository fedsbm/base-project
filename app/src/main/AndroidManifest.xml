<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.uk.softs.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.uk.softs.sample.SampleAndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.uk.softs.sample.activity.MainActivity"
            android:label="@string/activity_title_main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.uk.softs.sample.activity.ShowRandomNumberActivity"
            android:label="@string/activity_title_show_random_number"
            android:screenOrientation="portrait" />

        <activity
            android:name="org.uk.softs.sample.activity.SampleRetrofitActivity"
            android:label="@string/activity_title_retrofit"
            android:screenOrientation="portrait" />


    </application>

</manifest>
